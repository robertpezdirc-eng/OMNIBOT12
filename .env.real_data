# OmniCore Real Data Integration Configuration
# Kopiraj v .env datoteko in nastavi svoje vrednosti

# PostgreSQL Configuration
PG_HOST=localhost
PG_DATABASE=company_db
PG_USER=postgres
PG_PASSWORD=your_password_here
PG_PORT=5432

# MySQL Configuration  
MYSQL_HOST=localhost
MYSQL_DATABASE=company_db
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_PORT=3306

# SQLite Configuration
SQLITE_DB=data/company.db

# API Keys for External Services
OPENAI_API_KEY=your_openai_key_here
GOOGLE_SHEETS_API_KEY=your_google_sheets_key_here

# File Paths
CSV_DATA_DIR=data/csv
EXCEL_DATA_DIR=data/excel
BACKUP_DIR=data/backups

# Real-time Data Settings
REFRESH_INTERVAL_SECONDS=300
MAX_QUERY_RESULTS=1000
CACHE_ENABLED=true
CACHE_TTL_MINUTES=15

# Business Module Settings
FINANCE_MODULE_ENABLED=true
LOGISTICS_MODULE_ENABLED=true
TOURISM_MODULE_ENABLED=true
HEALTHCARE_MODULE_ENABLED=true
AGRICULTURE_MODULE_ENABLED=true

# Alert Thresholds
LOW_STOCK_THRESHOLD=10
HIGH_STOCK_THRESHOLD=1000
PROFIT_MARGIN_WARNING=5.0
REVENUE_DROP_ALERT=20.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/real_data.log
ENABLE_AUDIT_LOG=true