# Omni Global License System - Environment Configuration

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# MongoDB Connection
MONGO_URI=mongodb://omni:omni123@mongo:27017/omni?authSource=admin

# JWT Secret Key (CHANGE IN PRODUCTION!)
JWT_SECRET=super_secret_key_change_in_production

# Server Port
PORT=3000

# SSL Configuration
SSL_KEY_PATH=./certs/privkey.pem
SSL_CERT_PATH=./certs/fullchain.pem

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Admin Panel Port
ADMIN_PORT=4000

# Server URL for Admin Panel
SERVER_URL=https://server:3000

# Admin Authentication (optional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ===========================================
# CLIENT CONFIGURATION
# ===========================================

# Client Panel Port
CLIENT_PORT=5000

# ===========================================
# MONGODB CONFIGURATION
# ===========================================

# MongoDB Root Credentials
MONGO_INITDB_ROOT_USERNAME=omni
MONGO_INITDB_ROOT_PASSWORD=omni123

# Database Name
MONGO_DB_NAME=omni

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:4000,http://localhost:5000

# Session Secret
SESSION_SECRET=session_secret_key_change_in_production

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/omni.log

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================

# WebSocket CORS Origins
WS_CORS_ORIGINS=*

# WebSocket Connection Timeout (ms)
WS_CONNECTION_TIMEOUT=30000

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Environment (development, production)
NODE_ENV=development

# Enable HTTPS Redirect
HTTPS_REDIRECT=false

# Trust Proxy (for load balancers)
TRUST_PROXY=false

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup Directory
BACKUP_DIR=./backups

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# ===========================================
# EMAIL CONFIGURATION (optional)
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email From Address
EMAIL_FROM=noreply@omni-system.com

# ===========================================
# REDIS CONFIGURATION (optional)
# ===========================================

# Redis URL for session storage
REDIS_URL=redis://localhost:6379

# Redis Password
REDIS_PASSWORD=

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Health Check Interval (ms)
HEALTH_CHECK_INTERVAL=30000

# Metrics Collection
ENABLE_METRICS=true

# Prometheus Metrics Port
METRICS_PORT=9090