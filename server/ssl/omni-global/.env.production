# Production Environment Variables
# IMPORTANT: Change all default values before deployment!

# Database Configuration
MONGO_USERNAME=omni
MONGO_PASSWORD=your_secure_mongo_password_here
MONGO_URI=mongodb://omni:your_secure_mongo_password_here@mongo:27017/omni?authSource=admin

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Domain Configuration
DOMAIN=yourdomain.com
ADMIN_SUBDOMAIN=admin
CLIENT_SUBDOMAIN=client

# SSL Configuration
SSL_CERT_PATH=/app/certs/fullchain.pem
SSL_KEY_PATH=/app/certs/privkey.pem

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Max requests per window

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Security Headers
HSTS_MAX_AGE=31536000     # 1 year
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' wss: ws:;"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9100

# Node.js Configuration
NODE_ENV=production
NODE_OPTIONS="--max-old-space-size=1024"

# Application Ports (internal)
SERVER_PORT=3000
ADMIN_PORT=4000
CLIENT_PORT=5000

# External Ports (Nginx)
HTTP_PORT=80
HTTPS_PORT=443