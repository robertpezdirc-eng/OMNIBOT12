# ===========================================
# OMNI GLOBAL DEPLOY CONFIGURATION
# ===========================================

# Environment
NODE_ENV=production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# MongoDB
MONGO_URI=mongodb://omni:omni123@mongo:27017/omni?authSource=admin
MONGO_USERNAME=omni
MONGO_PASSWORD=omni123
MONGO_DATABASE=omni

# Redis Cache
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret (SPREMENITE V PRODUKCIJI!)
JWT_SECRET=super_secret_key_change_in_production_environment

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password_change_me

# API Keys
API_KEY=your_api_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================

# SSL Settings
SSL_ENABLED=true
SSL_CERT_PATH=/app/certs/fullchain.pem
SSL_KEY_PATH=/app/certs/privkey.pem

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Ports
SERVER_PORT=3000
SERVER_SSL_PORT=3443
ADMIN_PORT=4000
ADMIN_SSL_PORT=4443

# Server URLs
SERVER_URL=https://localhost:3443
ADMIN_URL=https://localhost:4443

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=false
GRAFANA_PORT=3001
GRAFANA_PASSWORD=secure_grafana_password

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json

# ELK Stack
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_PORT=5601

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=Omni Platform

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Payment Gateway (če potrebno)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Cloud Storage (če potrebno)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=your-bucket-name

# ===========================================
# RATE LIMITING
# ===========================================

# API Rate Limits
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Login Rate Limits
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=900000

# ===========================================
# SESSION CONFIGURATION
# ===========================================

# Session Settings
SESSION_SECRET=your_session_secret_change_in_production
SESSION_TIMEOUT=3600000

# Cookie Settings
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug Mode (samo za development)
DEBUG=false
VERBOSE_LOGGING=false

# Hot Reload (samo za development)
HOT_RELOAD=false

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Dodajte svoje custom spremenljivke tukaj
CUSTOM_FEATURE_ENABLED=true
CUSTOM_API_ENDPOINT=https://api.example.com

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Docker Compose Profiles
COMPOSE_PROFILES=default

# Resource Limits
MEMORY_LIMIT=1g
CPU_LIMIT=1.0

# ===========================================
# TIMEZONE
# ===========================================

TZ=Europe/Ljubljana