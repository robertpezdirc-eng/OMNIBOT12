# Omni Global Client Panel - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Node.js environment (development, production, test)
NODE_ENV=development

# HTTP server port
PORT=4002

# HTTPS server port (when SSL is enabled)
SSL_PORT=4443

# Enable HTTPS server (true/false)
SSL_ENABLED=false

# =============================================================================
# SSL CONFIGURATION
# =============================================================================

# Path to SSL private key file
SSL_KEY_PATH=./ssl/key.pem

# Path to SSL certificate file
SSL_CERT_PATH=./ssl/cert.pem

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (* for all origins, or specific URLs)
# Examples:
# CORS_ORIGIN=*
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=*

# =============================================================================
# API CONFIGURATION
# =============================================================================

# URL of the Omni Global License Server API
# Examples:
# API_URL=http://localhost:3000
# API_URL=https://api.omni-global.com
API_URL=http://localhost:3000

# Enable API request proxying in development (true/false)
# When enabled, /api/* requests will be proxied to API_URL
PROXY_API_REQUESTS=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Morgan logging format (combined, common, dev, short, tiny)
LOG_LEVEL=combined

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# Maximum requests per rate limit window (default: 1000)
RATE_LIMIT_MAX=1000

# =============================================================================
# CLIENT PANEL CONFIGURATION
# =============================================================================

# License check interval in milliseconds (default: 5 minutes)
LICENSE_CHECK_INTERVAL=300000

# Maximum retry attempts for license validation (default: 3)
MAX_RETRY_ATTEMPTS=3

# Retry delay in milliseconds (default: 2 seconds)
RETRY_DELAY=2000

# Heartbeat interval for Socket.IO in milliseconds (default: 30 seconds)
HEARTBEAT_INTERVAL=30000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug logging (true/false)
DEBUG_ENABLED=false

# Enable development tools (true/false)
DEV_TOOLS_ENABLED=true

# Mock API responses for testing (true/false)
MOCK_API_RESPONSES=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Trust proxy headers (true/false)
# Set to true when behind a reverse proxy (nginx, Apache, etc.)
TRUST_PROXY=false

# Session secret for secure sessions
# Generate a strong random string for production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable health check endpoint (true/false)
HEALTH_CHECK_ENABLED=true

# Enable metrics collection (true/false)
METRICS_ENABLED=false

# Metrics endpoint path
METRICS_ENDPOINT=/metrics

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Static file cache duration in seconds (default: 86400 = 1 day)
STATIC_CACHE_DURATION=86400

# Enable ETag headers for caching (true/false)
ETAG_ENABLED=true

# =============================================================================
# ERROR HANDLING CONFIGURATION
# =============================================================================

# Show detailed error messages in development (true/false)
SHOW_ERROR_DETAILS=true

# Error reporting service URL (optional)
ERROR_REPORTING_URL=

# =============================================================================
# SOCKET.IO CONFIGURATION
# =============================================================================

# Socket.IO connection timeout in milliseconds
SOCKET_TIMEOUT=10000

# Socket.IO reconnection attempts
SOCKET_RECONNECTION_ATTEMPTS=5

# Socket.IO reconnection delay in milliseconds
SOCKET_RECONNECTION_DELAY=2000

# =============================================================================
# CRYPTO CONFIGURATION
# =============================================================================

# Encryption algorithm for local storage (default: AES-GCM)
CRYPTO_ALGORITHM=AES-GCM

# Key derivation iterations for PBKDF2 (default: 100000)
CRYPTO_ITERATIONS=100000

# Salt length for key derivation (default: 32 bytes)
CRYPTO_SALT_LENGTH=32

# =============================================================================
# EXAMPLE CONFIGURATIONS FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development Environment:
# NODE_ENV=development
# PORT=4002
# SSL_ENABLED=false
# API_URL=http://localhost:3000
# PROXY_API_REQUESTS=true
# DEBUG_ENABLED=true

# Production Environment:
# NODE_ENV=production
# PORT=4002
# SSL_ENABLED=true
# SSL_PORT=4443
# API_URL=https://api.omni-global.com
# PROXY_API_REQUESTS=false
# TRUST_PROXY=true
# SHOW_ERROR_DETAILS=false

# Testing Environment:
# NODE_ENV=test
# PORT=4003
# MOCK_API_RESPONSES=true
# DEBUG_ENABLED=true