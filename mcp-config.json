{
  "mcpServers": {
    "main-server": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server"
      ],
      "env": {
        "MAX_AGENTS": "8",
        "STREAMING_OUTPUT": "true",
        "PREVIEW_MODE": "true",
        "MAX_TOKENS_PER_REQUEST": "512",
        "ENABLE_GPU": "true",
        "LANGUAGE": "sl",
        "LOG_LEVEL": "info"
      },
      "restartOnCrash": true
    }
  },
  "agents": [
    {
      "name": "text-generator",
      "model": "gpt2-large",
      "task": "text-generation",
      "max_new_tokens": 256,
      "temperature": 0.8,
      "top_p": 0.9,
      "stream_output": true
    },
    {
      "name": "image-generator",
      "model": "stable-diffusion-v1",
      "task": "image-generation",
      "resolution": "512x512",
      "stream_output": true
    },
    {
      "name": "assistant",
      "model": "gpt-neo-2.7B",
      "task": "multi-purpose",
      "stream_output": true
    }
  ]
}