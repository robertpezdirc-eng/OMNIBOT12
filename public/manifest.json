{
  "name": "Omniscient AI Platform - Nadzorna Plošča",
  "short_name": "Omni Dashboard",
  "description": "Napredna PWA nadzorna plošča za upravljanje IoT naprav, AI avtomatizacijo in analitiko",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1f2937",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "sl",
  "dir": "ltr",
  "categories": ["productivity", "utilities", "business"],
  "icons": [
    {
      "src": "/icons/icon-192x192.svg",
      "sizes": "72x72 96x96 128x128 144x144 152x152 192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "384x384 512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Nadzorna plošča - namizna različica"
    },
    {
      "src": "/screenshots/dashboard-mobile.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Nadzorna plošča - mobilna različica"
    }
  ],
  "shortcuts": [
    {
      "name": "IoT Naprave",
      "short_name": "Naprave",
      "description": "Upravljanje IoT naprav",
      "url": "/?section=devices",
      "icons": [
        {
          "src": "/icons/devices-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Avtomatizacija",
      "short_name": "AI",
      "description": "AI sistem za avtomatizacijo",
      "url": "/?section=ai",
      "icons": [
        {
          "src": "/icons/ai-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Analitika",
      "short_name": "Analitika",
      "description": "Prikaz analitike in statistik",
      "url": "/?section=analytics",
      "icons": [
        {
          "src": "/icons/analytics-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "omni",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xlsx"]
      }
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/json", "text/csv"]
        }
      ]
    }
  }
}