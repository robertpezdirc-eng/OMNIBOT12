# Produkcijska konfiguracija za Omni License System
# POMEMBNO: Spremenite vse privzete vrednosti pred produkcijsko uporabo!

# Splošne nastavitve
NODE_ENV=production
PORT=3002
LOG_LEVEL=info
TZ=Europe/Ljubljana

# Baza podatkov
MONGO_ROOT_USERNAME=omni_admin
MONGO_ROOT_PASSWORD=change_this_secure_password_123
MONGO_DB=omni_licenses

# Redis
REDIS_PASSWORD=change_this_redis_password_456

# Varnost
JWT_SECRET=change_this_super_secure_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=change_this_32_char_encryption_key

# Email konfiguracija (Gmail primer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# SMS konfiguracija (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook konfiguracija
WEBHOOK_ENDPOINTS=https://your-domain.com/webhook1,https://your-domain.com/webhook2
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Obvestila
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=60000

# Backup/Restore konfiguracija
BACKUP_DIR=./backups
MAX_BACKUPS=30
BACKUP_COMPRESSION_LEVEL=6
DAILY_BACKUP_CRON=0 2 * * *
WEEKLY_BACKUP_CRON=0 3 * * 0
MONTHLY_BACKUP_CRON=0 4 1 * *

# AWS S3 konfiguracija za backup
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=eu-west-1
AWS_S3_BACKUP_BUCKET=your-backup-bucket-name

# Google Drive backup (opcijsko)
GOOGLE_DRIVE_BACKUP_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Plačilni sistemi
# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# Monitoring (opcijsko)
GRAFANA_PASSWORD=secure_grafana_password_789

# SSL certifikati (poti v container-ju)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Varnostne nastavitve
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
TRUST_PROXY=true
SECURE_COOKIES=true