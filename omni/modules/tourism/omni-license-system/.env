# OMNI License System Configuration
# Port za Express server
PORT=3000

# JWT Secret za podpisovanje tokenov
JWT_SECRET=omni_super_secret_jwt_key_2024_production_ready

# Database configuration
DB_PATH=./data/omni_licenses.db

# Encryption keys
ENCRYPTION_KEY=omni_encryption_key_2024_secure_production

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# License validation settings
DEFAULT_DEMO_DURATION_DAYS=14
DEFAULT_BASIC_DURATION_DAYS=365
DEFAULT_PREMIUM_DURATION_DAYS=365
DEFAULT_ENTERPRISE_DURATION_DAYS=365

# Cloud endpoints (za prihodnje integracije)
CLOUD_ENDPOINT=https://api.omni-cloud.com
WEBHOOK_SECRET=omni_webhook_secret_2024

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/omni-license.log

# Development settings
NODE_ENV=development
DEBUG=omni:*

# Admin credentials (za demo)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Email configuration (za prihodnje)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Backup settings
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30