# Omni License System - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
USE_HTTPS=false

# Global Server Configuration
GLOBAL_SERVER_URL=https://omni.example.com:3000
FALLBACK_SERVER_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/omni_license_system

# CORS Configuration
# For development: specific origins
# For production: * (all origins)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:8080
WEBSOCKET_CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:8080

# SSL Configuration
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.crt

# Server Identification
SERVER_ID=omni-license-server

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_GLOBAL_BROADCAST=true

# Development Settings
DEBUG_WEBSOCKET=false
DEBUG_LICENSE_CHECKS=false
DEBUG_EMAIL_SERVICE=false

# License Monitor Configuration
LICENSE_CHECK_INTERVAL=0 9 * * *
LICENSE_REMINDER_DAYS=30,14,7,3,1
LICENSE_GRACE_PERIOD=7

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Admin Configuration
ADMIN_EMAIL=admin@omni.si
SUPPORT_EMAIL=support@omni.si

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# SMS Configuration (if enabled)
# SMS_PROVIDER=twilio
# SMS_ACCOUNT_SID=your-twilio-sid
# SMS_AUTH_TOKEN=your-twilio-token
# SMS_FROM_NUMBER=+1234567890

# Webhook Configuration (if enabled)
# WEBHOOK_URL=https://your-webhook-endpoint.com/license-notifications
# WEBHOOK_SECRET=your-webhook-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/omni-license.log

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30