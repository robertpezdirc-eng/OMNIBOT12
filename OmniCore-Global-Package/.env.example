# OmniCore Global Platform - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://omnicore:your_secure_password@localhost:5432/omnicore_global
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=OmniCore Global Platform
APP_VERSION=1.0.0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_MAX_CONNECTIONS=1000

# =============================================================================
# MULTI-TENANT CONFIGURATION
# =============================================================================
DEFAULT_TENANT_NAME=Default Company
DEFAULT_TENANT_DOMAIN=localhost
AUTO_CREATE_DEFAULT_TENANT=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# File storage (optional)
STORAGE_TYPE=local
# For AWS S3:
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=omnicore-files
# AWS_REGION=us-east-1

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your_grafana_password
LOG_FILE_PATH=./logs/omnicore.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_FINANCE=true
ENABLE_TASK_MANAGEMENT=true
ENABLE_LOGISTICS=true
ENABLE_HEALTHCARE=true
ENABLE_TOURISM=true

# =============================================================================
# DEVELOPMENT ONLY (remove in production)
# =============================================================================
# RELOAD=true
# DEBUG_SQL=false