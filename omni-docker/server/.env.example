# Omni License System - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# HTTPS Configuration
USE_HTTPS=false
# Set to true to enable HTTPS (requires SSL certificates in ssl/ directory)

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/omni_license_system

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:8080
WEBSOCKET_CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:8080

# Email Service Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Alternative Email Services (uncomment to use)
# EMAIL_SERVICE=outlook
# EMAIL_SERVICE=yahoo
# EMAIL_SERVICE=custom

# Custom SMTP Configuration (if using custom service)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false

# License Monitor Configuration
LICENSE_CHECK_INTERVAL=0 9 * * *
LICENSE_REMINDER_DAYS=30,14,7,3,1
LICENSE_GRACE_PERIOD=7

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Admin Configuration
ADMIN_EMAIL=admin@omni.si
SUPPORT_EMAIL=support@omni.si

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# SMS Configuration (if enabled)
# SMS_PROVIDER=twilio
# SMS_ACCOUNT_SID=your-twilio-sid
# SMS_AUTH_TOKEN=your-twilio-token
# SMS_FROM_NUMBER=+1234567890

# Webhook Configuration (if enabled)
# WEBHOOK_URL=https://your-webhook-endpoint.com/license-notifications
# WEBHOOK_SECRET=your-webhook-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/omni-license.log

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30