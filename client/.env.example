# Omni Client Panel - Global Configuration
# Copy this file to .env and configure your settings

# Global Omni Server URL (for worldwide access)
OMNI_SERVER_URL=https://omni.example.com:3000

# Unique Client ID (leave empty for auto-generation)
CLIENT_ID=

# Client Location (for tracking and analytics)
CLIENT_LOCATION=Slovenia

# License Configuration
LICENSE_CHECK_INTERVAL=300000
AUTO_BLOCK_TIMEOUT=600000

# Connection Settings
MAX_RETRY_ATTEMPTS=5
RETRY_DELAY=5000
HEARTBEAT_INTERVAL=30000

# Security Settings
ENABLE_SSL_VERIFICATION=true
ENABLE_OFFLINE_MODE=true

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info

# UI Settings
THEME=default
LANGUAGE=sl