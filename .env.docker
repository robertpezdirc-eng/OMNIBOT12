# üê≥ Omni Ultimate - Docker Environment Configuration
# Optimizirane nastavitve za Docker Compose

# ========================================
# üîß OSNOVNE NASTAVITVE
# ========================================
NODE_ENV=production
PORT=3000
WEBSOCKET_PORT=3001
LOG_LEVEL=info
DEBUG_MODE=false

# ========================================
# üóÑÔ∏è MONGODB KONFIGURACIJA
# ========================================
MONGO_ROOT_USERNAME=omni_admin
MONGO_ROOT_PASSWORD=omni_secure_2024_docker
MONGO_DATABASE=omni_ultimate
MONGO_PORT=27017

# ========================================
# üîÑ REDIS KONFIGURACIJA
# ========================================
REDIS_PASSWORD=omni_redis_2024_docker
REDIS_PORT=6379

# ========================================
# üîê VARNOSTNE NASTAVITVE
# ========================================
JWT_SECRET=omni_ultimate_jwt_secret_2024_super_secure_docker_production
JWT_EXPIRES_IN=24h
LICENSE_ENCRYPTION_KEY=omni_license_encryption_2024_docker_secure

# ========================================
# üåê WEBSOCKET KONFIGURACIJA
# ========================================
WEBSOCKET_CORS_ORIGIN=*
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# ========================================
# üìß EMAIL KONFIGURACIJA (opcijsko)
# ========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ========================================
# üîí SSL KONFIGURACIJA
# ========================================
SSL_ENABLED=false
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# ========================================
# üéØ LICENƒåNI SISTEM
# ========================================
DEFAULT_LICENSE_DURATION=30
LICENSE_DEFAULT_DURATION_DAYS=30
DEMO_LICENSE_DURATION_HOURS=24
MAX_DEMO_LICENSES_PER_CLIENT=3

# ========================================
# üìä RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ========================================
# üîç MONITORING IN METRICS
# ========================================
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# ========================================
# üöÄ PERFORMANCE OPTIMIZACIJE
# ========================================
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# ========================================
# üìù LOGGING KONFIGURACIJA
# ========================================
LOG_FILE=logs/omni-docker.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=5

# ========================================
# üîß DOCKER SPECIFIƒåNE NASTAVITVE
# ========================================
CONTAINER_NAME=omni-ultimate-app
RESTART_POLICY=unless-stopped
HEALTH_CHECK_ENABLED=true

# ========================================
# üîß ENV VALIDATION NASTAVITVE
# ========================================
VALIDATE_ENV_ON_STARTUP=true
REQUIRED_ENV_VARS=NODE_ENV,PORT,MONGO_ROOT_USERNAME,MONGO_ROOT_PASSWORD,JWT_SECRET

# ========================================
# üîÑ AUTO RESTART KONFIGURACIJA
# ========================================
AUTO_RESTART_ON_FAILURE=true
MAX_RESTART_ATTEMPTS=5
RESTART_DELAY_SECONDS=10

# ========================================
# üè• HEALTH CHECK KONFIGURACIJA
# ========================================
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s