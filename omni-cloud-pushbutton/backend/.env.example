# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/omni-cloud?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=supersecretkey_change_this_in_production
JWT_EXPIRES_IN=7d

# API Configuration
API_URL=https://your-deployed-app.com
CLIENT_URL=https://your-client-app.com
ADMIN_URL=https://your-admin-app.com

# License Configuration
LICENSE_ENCRYPTION_KEY=your_license_encryption_key_32_chars
DEFAULT_LICENSE_DURATION=30
MAX_LICENSE_DURATION=365

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=*
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@omni-cloud.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_DEBUG_MODE=false
ENABLE_ANALYTICS=true

# External Services (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30