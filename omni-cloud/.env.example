# Omni Cloud Server Configuration
# Kopiraj to datoteko v server/.env in prilagodi vrednosti

# Server konfiguracija
PORT=5001
NODE_ENV=development

# Baza podatkov
# Za produkcijo nastavi DEMO_MODE=false in dodaj pravo MongoDB URI
MONGODB_URI=mongodb://localhost:27017/omni-cloud
DEMO_MODE=true
USE_MEMORY_DB=true

# JWT konfiguracija
# POMEMBNO: Spremeni JWT_SECRET za produkcijo!
JWT_SECRET=omni-cloud-super-secret-key-2024
JWT_EXPIRES_IN=1h

# Redis konfiguracija (opcijsko)
# Za produkcijo nastavi pravo Redis URL
REDIS_URL=redis://localhost:6379

# Email konfiguracija (opcijsko)
# Potrebno za po≈°iljanje obvestil o licencah
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cron jobs
# Za produkcijo nastavi ENABLE_CRON=true
ENABLE_CRON=false

# Varnostne nastavitve
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Testno okolje
# Za testiranje z ngrok ali podobnimi orodji
# PUBLIC_URL=https://your-ngrok-url.ngrok.io