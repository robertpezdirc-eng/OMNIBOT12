# .env.secure.example
# Varnostne nastavitve za IoT sistem - KOPIRAJ V .env.secure IN NASTAVI REALNE VREDNOSTI

# ================================
# MQTT BROKER NASTAVITVE (TLS)
# ================================
MQTT_BROKER=mqtt.example.com
MQTT_PORT=8883
MQTT_USERNAME=omni_iot_user
MQTT_PASSWORD=super_secure_mqtt_password_2024
MQTT_CLIENT_ID=OmniIoTSecure

# ================================
# API AVTENTIKACIJA
# ================================
API_TOKEN=your_secure_api_token_here
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_here

# ================================
# EMAIL OBVESTILA
# ================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
FROM_EMAIL=omni-iot@yourdomain.com

# ================================
# WEBHOOK OBVESTILA
# ================================
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_SECRET=your_webhook_secret

# ================================
# SLACK INTEGRACIJA
# ================================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#iot-alerts

# ================================
# TELEGRAM BOT
# ================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ================================
# BAZA PODATKOV
# ================================
DATABASE_URL=sqlite:///data/iot_database.db
# Za PostgreSQL: postgresql://user:password@localhost/iot_db
# Za MySQL: mysql://user:password@localhost/iot_db

# ================================
# VARNOSTNE NASTAVITVE
# ================================
ENCRYPTION_KEY=your_32_character_encryption_key
HASH_SALT=your_hash_salt_here
SESSION_SECRET=your_session_secret

# ================================
# MONITORING
# ================================
MONITORING_INTERVAL=60
ALERT_COOLDOWN_MINUTES=15
MAX_RETRY_ATTEMPTS=3

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
LOG_FILE=data/logs/iot_system.log
AUDIT_LOG_FILE=data/logs/iot_audit.log

# ================================
# NAPREDNE NASTAVITVE
# ================================
DEVICE_TIMEOUT=30
MAX_CONCURRENT_CONNECTIONS=100
RATE_LIMIT_PER_MINUTE=60

# ================================
# VARNOSTNI CERTIFIKATI (opcijsko)
# ================================
# SSL_CERT_PATH=certs/server.crt
# SSL_KEY_PATH=certs/server.key
# CA_CERT_PATH=certs/ca.crt

# ================================
# NASTAVITVE OKOLJA
# ================================
ENVIRONMENT=production
DEBUG=false
ENABLE_CORS=true
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ================================
# BACKUP NASTAVITVE
# ================================
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=data/backups/

# ================================
# OPOMBE ZA NASTAVITEV
# ================================
# 1. Kopiraj to datoteko v .env.secure
# 2. Nastavi vse vrednosti z resničnimi podatki
# 3. Nikoli ne commitaj .env.secure v git
# 4. Preveri da je .env.secure v .gitignore
# 5. Nastavi ustrezne file permissions (600)

# VARNOSTNI NASVETI:
# - Uporabi močne, unikatne gesla
# - Redno menjaj API ključe
# - Omogoči 2FA kjer je možno
# - Monitoraj dostope in aktivnosti
# - Redno posodabljaj sistem